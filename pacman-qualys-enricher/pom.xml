    		<artifactId>aws-java-sdk-events</artifactId>
    	</exclusion>
    	<exclusion>
    		<groupId>com.amazonaws</groupId>
    		<artifactId>aws-java-sdk-kms</artifactId>
    	</exclusion>
    	<exclusion>
    		<groupId>com.amazonaws</groupId>
    		<artifactId>aws-java-sdk-route53</artifactId>
